    "devDependencies": {
        "@eslint/js": "^9.38.0",
        "@mikro-orm/cli": "^6.5.8",
        "@tsconfig/node22": "^22.0.2",
        "@types/express": "^5.0.3",
        "@types/node": "^24.9.1",
        "eslint": "^9.38.0",
        "eslint-plugin-perfectionist": "^4.15.1",
        "prettier": "^3.6.2",
